<%= simple_form_for(@contact) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :fname, label: "First Name", input_html: { value: current_user.profile.fname } %>
  	<%= f.input :lname, label: "Last Name", input_html: { value: current_user.profile.lname } %>
  	<%= f.input :email, input_html: { value: current_user.email } %>
    <%= f.input :title, label: "Subject", input_html: { value: @enquiry_type } %>
    <%= f.input :text, label: "Message" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send" %>
  </div>
<% end %>
